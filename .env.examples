# Authentication mode: 'auto' (default), 'api_key', or 'cookies'
# In 'auto' mode, API key is used if set, otherwise Chrome cookies
PITCHBOOK_AUTH_MODE=auto

# PitchBook API key (required if auth_mode='api_key', optional otherwise)
PITCHBOOK_API_KEY=your-pitchbook-api-key-here
PITCHBOOK_API_BASE_URL=https://api.pitchbook.com/v2
PITCHBOOK_API_TIMEOUT=30
PITCHBOOK_API_MAX_RETRIES=3

# PitchBook website URL (used for cookie-based auth)
PITCHBOOK_WEB_BASE_URL=https://pitchbook.com

# Local data store
PITCHBOOK_DB_PATH=pitchbook_data.db

# Listener configuration
PITCHBOOK_POLL_INTERVAL_SECONDS=300

# Anthropic / Claude (required for agent query interface)
PITCHBOOK_ANTHROPIC_API_KEY=your-anthropic-api-key-here
PITCHBOOK_CLAUDE_MODEL=claude-sonnet-4-20250514
